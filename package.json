{
  "name": "hexconverter",
  "version": "1.7.0",
  "description": "This addon instantly converts numbers from and to different formats : decimal, binary, octal, hexadecimal and RGB formatted colors.",
  "main": "build.js",
  "directories": {
    "test": "src/tests"
  },
  "scripts": {
    "test": "jest",
    "build": "node build.js build",
    "css": "node build.js css",
    "js": "node build.js js",
    "lint": "eslint server/ src/",
    "start": "node build.js start",
    "publish": "node build.js publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmahistre/hexconverter.git"
  },
  "author": "Lionel Mahistre",
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/lmahistre/hexconverter/issues"
  },
  "homepage": "https://addons.mozilla.org/firefox/addon/hexconverter",
  "dependencies": {
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "jest": "^27.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "archiver": "^5.3.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.2",
    "express": "^4.17.1",
    "less": "^4.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sharp": "^0.29.1",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "jest": true,
      "node": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx"
        ]
      }
    ],
    "rules": {
      "curly": "error",
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "no-empty": 0,
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "react/prop-types": 0
    }
  },
  "jest": {
    "testMatch": [
      "**/src/tests/**/?(*.)(spec|test).js?(x)"
    ]
  }
}
